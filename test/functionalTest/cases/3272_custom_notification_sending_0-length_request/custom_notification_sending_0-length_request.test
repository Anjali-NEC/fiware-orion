# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Custom notification sending 0-length request

--SHELL-INIT--
dbInit CB
brokerStart CB 0
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create E1/T1
# 02. Create custom subscription with empty PAYLOAD and URL
# 03. Create custom subscription with empty PAYLOAD, URL and VERB
# 04. Create custom subscription with non-empty PAYLOAD, URL, VERB
# 05. Create custom subscription with empty PAYLOAD, URL and VERB
# 06. Dump accumulator to see the notification
#


echo "01. Create E1/T1"
echo "================"
payload='{
  "id": "E1",
  "type": "T1",
  "A1": true
}'
orionCurl --url /v2/entities?options=keyValues --payload "$payload"
echo
echo


echo '02. Create custom subscription with empty PAYLOAD and URL'
echo "========================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "httpCustom": {
      "url":      "http://localhost:'${LISTENER_PORT}'/notify",
      "payload": ""
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '03. Create custom subscription with empty PAYLOAD, URL and VERB'
echo "==============================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "httpCustom": {
      "url":      "http://localhost:'${LISTENER_PORT}'/notify",
      "method": "GET",
      "payload": ""
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '04. Create custom subscription with non-empty PAYLOAD, URL and VERB'
echo "==================================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "httpCustom": {
      "url":      "http://localhost:'${LISTENER_PORT}'/notify",
      "method": "PUT",
      "payload": "{ %22A1%22: %22${A1}%22, %22A2%22: %22${A2}%22, %22A3%22: %22${A3}%22 }"
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo '05. Create custom subscription with empty PAYLOAD, URL and VERB'
echo "==============================================================="
payload='{
  "subject": {
    "entities": [
      {
        "id" : "E1"
      }
    ],
    "condition": {
      "attrs": []
    }
  },
  "notification": {
    "httpCustom": {
      "url":      "http://localhost:'${LISTENER_PORT}'/notify",
      "method": "DELETE",
      "payload": ""
    }
  }
}'
orionCurl --url /v2/subscriptions --payload "$payload"
echo
echo


echo "06. Dump accumulator to see the notification"
echo "============================================"
accumulatorDump
echo
echo


